<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="button_base_style">
        <item name="android:layout_width">@dimen/activity_button_width</item>
        <item name="android:layout_height">@dimen/activity_button_height</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textSize">@dimen/activity_button_text_size</item>
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="actionButtonStyle" parent="button_base_style">
        <item name="android:backgroundTint">@color/action_button_color</item>
    </style>

    <style name="clearButtonStyle" parent="button_base_style">
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/clear_button_color</item>
    </style>

    <style name="numberButtonStyle" parent="button_base_style">
        <item name="android:backgroundTint">@color/number_button_color</item>
    </style>


</resources>
